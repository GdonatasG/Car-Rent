<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <stroke android:width="0.3dp" android:color="#DD888888"/>
            <solid android:color="#A9FFFFFF" />
        </shape>
    </item>
    <item
            android:state_pressed="true"
            android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <stroke android:width="0.3dp" android:color="#B3c1c1c1"/>
            <solid android:color="#B3c1c1c1" />
        </shape>
    </item>
    <item
            android:state_focused="true"
            android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <stroke android:width="0.3dp" android:color="#B3c1c1c1"/>
            <solid android:color="#B3c1c1c1" />
        </shape>
    </item>
    <item
            android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <stroke android:width="0.2dp" android:color="#B3c1c1c1"/>
            <solid android:color="#A9FFFFFF" />
        </shape>
    </item>
</selector>