<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextPrimaryBold">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSplashScreenWelcome">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">38sp</item>
        <item name="android:fontFamily">@font/audiowide</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextSecondOptions">
        <item name="android:textColor">@color/lightgray</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:padding">9dp</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="EditText">
        <item name="android:background">@drawable/background_with_radius</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textColorHint">@color/lightgray</item>
        <item name="android:textColor">@color/lightgray</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="button">
        <item name="android:background">@drawable/custom_button_radius_orange</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:layout_marginRight">35dp</item>
    </style>

    <style name="progress_bar">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:visibility">invisible</item>
        <item name="android:indeterminateTint">@color/lightgray</item>
    </style>

    <style name="iv_logo">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:src">@drawable/ic_directions_car_orange_24dp</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/colorPrimary</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
