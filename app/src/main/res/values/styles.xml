<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="TextPrimaryBold">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSplashScreenWelcome">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">38sp</item>
        <item name="android:fontFamily">@font/audiowide</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextSecondOptions">
        <item name="android:textColor">@color/lightgray</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:padding">9dp</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="EditText">
        <item name="android:background">@drawable/background_with_radius</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textColorHint">@color/lightgray</item>
        <item name="android:textColor">@color/lightgray</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="button">
        <item name="android:background">@drawable/custom_button_radius_orange</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:layout_marginRight">35dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="progress_bar">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:visibility">invisible</item>
        <item name="android:indeterminateTint">@color/lightgray</item>
    </style>

    <style name="progress_bar_dark">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:visibility">visible</item>
        <item name="android:indeterminateTint">@color/colorPrimary</item>
    </style>

    <style name="progress_dialog_bar" parent="android:Theme.Material.Dialog">
        <item name="android:indeterminateTint">@color/orange</item>
    </style>

    <style name="iv_logo">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:src">@drawable/ic_directions_car_orange_24dp</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/colorPrimary</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/orange</item>
        <item name="android:textColorPrimary">@color/orange</item>
        <item name="android:textColorSecondary">@color/lightgray</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomEditTextForDialog">
        <item name="colorControlNormal">@color/lightgray</item>
        <item name="colorControlActivated">@color/lightgray</item>
        <item name="colorControlHighlight">@color/lightgray</item>
        <item name="android:textColorHint">@color/lightgray</item>
        <item name="android:editTextColor">@color/lightgray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:singleLine">true</item>

    </style>

    <style name="layout_divider_normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="layout_divider_small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="layout_divider_light" parent="@style/layout_divider_normal">
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="preference_title">
        <item name="android:textColor">@color/orange</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="preference_summary">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="profile_balance">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="profile_action_item">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="ToolbarTitleFont">
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- CardView item-->

    <style name="cardview">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">@dimen/cardview_width</item>
        <item name="android:layout_height">@dimen/cardview_height</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="cardview_image">
        <item name="android:layout_width">@dimen/cardview_image_width</item>
        <item name="android:layout_height">@dimen/cardview_image_height</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="cardview_title">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="cardview_subtitle">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="cardview_divider" parent="@style/layout_divider_normal">
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>

    <style name="cardview_layout_bg">
        <item name="android:background">@color/lightgray</item>
    </style>

    <!-- Car details cardviews -->
    <style name="TextCardViewRegular">
        <item name="android:textColor">@color/lightgray</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">12.5sp</item>
    </style>

    <style name="TextCardViewTitleItalic">
        <item name="android:textColor">@color/lightgray</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">13.5sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLength">30</item>
        <item name="android:maxLines">1</item>
    </style>


</resources>
